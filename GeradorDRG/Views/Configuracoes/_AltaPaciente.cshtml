@model GeradorDRG.Models.AltaPaciente

<div class="form-group">
    <input type="hidden" name="MotivoAlta.Index" value="@ViewBag.Index" />
    <input type="hidden" name="MotivoAlta.[@ViewBag.Index].ConfiguracaoId" value="@Model.ConfiguracaoId" />
    
    <input type="hidden" name="MotivoAlta.Index" value="@ViewBag.Index" />
    <label class="control-label" for="MotivoAlta[@ViewBag.Index].Tipo">Código Motivo</label>
    <input name="MotivoAlta[@ViewBag.Index].CodigoMotivo" class="form-control" id="MotivoAlta[@ViewBag.Index].CodigoMotivo" aria-required="true" required="required" type="text" value="@Model.CodigoMotivo">
    <span class="text-danger field-validation-valid" data-valmsg-replace="true" data-valmsg-for="MotivoAlta[@ViewBag.Index].CodigoMotivo"></span>

    <label class="control-label" for="MotivoAlta[@ViewBag.Index].Tipo">Motivo Alta</label>
    <input name="MotivoAlta[@ViewBag.Index].MotivoAlta" class="form-control" id="MotivoAlta[@ViewBag.Index].MotivoAlta" aria-required="true" required="required" type="text" value="@Model.MotivoAlta">
    <span class="text-danger field-validation-valid" data-valmsg-replace="true" data-valmsg-for="MotivoAlta[@ViewBag.Index].MotivoAlta"></span>

    <input type="hidden" name="MotivoAlta.Index" value="@ViewBag.Index" />
    <label class="control-label" for="MotivoAlta[@ViewBag.Index].Tipo">Tipo da Alta</label>
    <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<GeradorDRG.Models.AltaPaciente.TipoDRG>()"></select>
    @*<input name="MotivoAlta[@ViewBag.Index].Tipo" class="form-control" id="MotivoAlta[@ViewBag.Index].Tipo" aria-required="true" required="required" type="text" value="@Model.Tipo">*@
    <span class="text-danger field-validation-valid" data-valmsg-replace="true" data-valmsg-for="MotivoAlta[@ViewBag.Index].Tipo"></span>
    <a href="#" class="btn btn-danger remove_field">Remove</a>
</div>

