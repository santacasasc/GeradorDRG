@model ProjetoDRG.ViewModels.GerarXMLViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container caixa">
    <div class="well" style="margin-top:50px;">
        <div class="wizard col-lg-12">
            <div class="wizard-row steps">
                <div class="wizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                    <p>Gerar XML</p>
                </div>

            </div>
        </div>
        <fieldset class="col-xs-12">
            <legend></legend>
            <form role="form" asp-action="GeracaoXML" method="get">
                <div class="row step-content" id="step-1">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="DataInicio" class="control-label"></label>
                            <input asp-for="DataInicio" required="required" class="form-control" />
                            <span asp-validation-for="DataInicio" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DataFim" class="control-label"></label>
                            <input asp-for="DataFim" required="required" class="form-control" />
                            <span asp-validation-for="DataFim" class="text-danger"></span>
                        </div>
                         <input type="submit" value="Gerar" class="btn btn-default GeerarPadding" />
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}